<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF"
    tools:context="com.newproject.pispqsearch.MainActivity"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/ic_menu_sort_by_size"
        tools:targetApi="lollipop"

        android:id="@+id/idImage2"
        android:paddingBottom="50dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idText1"
        android:paddingTop="50dp"
        android:textColor="#0D47A1"
        android:textStyle="bold"
        android:text="FISPQ SEARCH"
        android:gravity="center_horizontal"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idText2"
        android:textColor="#1565C0"
        android:textStyle="normal"
        android:text="Pintura Automotiva"
        android:layout_below="@+id/idText1"
        android:gravity="center_horizontal"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idText2"
        android:id="@+id/idEdit1"
        android:paddingRight="30dp"
        android:paddingBottom="10dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/ic_menu_search"
        tools:targetApi="lollipop"

        android:id="@+id/idImage1"
        android:layout_alignBottom="@+id/idEdit1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingBottom="50dp"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idEdit1"
        android:id="@+id/idList1"
        >

    </ListView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:visibility="gone"
        android:id="@+id/idFrame1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="O que é FISPQ?"
                android:textStyle="bold"
                android:id="@+id/idText3"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Ficha de Informação de Produtos Químicos."
                android:textStyle="normal"
                android:id="@+id/idText4"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Qual a importância do FISPQ?"
                android:textStyle="bold"
                android:id="@+id/idText5"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Fornecer informações sobre vários aspectos dos produtos químicos (substâncias ou preparados) quanto a proteção, segurança, saúde e meio ambiente."
                android:textStyle="normal"
                android:id="@+id/idText6"
                />

        </LinearLayout>

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Jadison Lopes Developer"
        android:textStyle="italic"
        android:textColor="#BDBDBD"
        android:layout_alignParentBottom="true"
        android:id="@+id/idTextPropaganda1"
        />

    <ImageView
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:id="@+id/idImageInsta"
        android:background="@drawable/instagram"
        android:layout_toStartOf="@+id/idTextPropaganda2"
        android:layout_alignParentBottom="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" @jadisonlopess"
        android:textStyle="italic"
        android:textAlignment="viewEnd"
        android:textColor="#BDBDBD"
        android:id="@+id/idTextPropaganda2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        />

</RelativeLayout>
